<Window x:Class="GuardTerminal.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuardTerminal.Windows"
        mc:Ignorable="d"
        Title="Список заявок" Height="450" Width="800" Icon="..\assets\logo.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock  FontSize="24" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Angel Corp"/>
            <Image HorizontalAlignment="Left" Margin="12,0,0,0" Source="..\assets\logo.png"/>
        </Grid>
        <Frame Name="Frame" Grid.Row="1"/>

    </Grid>
</Window>
